<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd ">
    <changeSet id="1" author="odynm">
        <createTable tableName="User.Info">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="login" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="hash" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean"/>
			<column name="deleteddate" type="datetime"/>
			<column name="plan" type="tinyint"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="odynm">
        <createTable tableName="Admin.Info">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="login" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="hash" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
			<column name="lastlogged" type="datetime"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
